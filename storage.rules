rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can only upload/read files in their own folder
    match /uploads/{userId}/{orderId}/{fileName} {
      // Allow read if authenticated and matches userId
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow write if authenticated, matches userId, and file size is valid
      allow write: if request.auth != null && 
        request.auth.uid == userId &&
        request.resource.size < 50 * 1024 * 1024; // 50MB limit
      
      // Allow delete if authenticated and matches userId
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

